app.py

from flask import Flask
app=Flask(__name__)
@app.route('\')
def home():
	return "Hello,docker"
if __name__=='__main__':
	app.run(host='0.0.0.0',port=5000)


requirements.txt
flask

dockerfile
FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
EXOPOSE 5000
CMD["python","app.py"]

FROM ubuntu:16.04
RUN apt-git update && apt-git install -y curl
CMD["echo","hello"]
